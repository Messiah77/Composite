<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Composite.Models"
             x:Class="Composite.Views.TreesItemPage"
             Title="TreesItemPage">
    <ScrollView>
        <VerticalStackLayout Padding="20"
 Spacing="10"
VerticalOptions="StartAndExpand">
            <Label Text="Nombre Rama" />
            <Entry x:Name="nameB" Text="{Binding NameComposite}" />
            <Label Text="Nombre Hoja" />
            <Entry x:Name="descB" Text="{Binding NameLeaf}" />
            <Button Text="Guardar"
                Clicked="OnSaveClicked" />
            <Button Text="Cancelar"
                Clicked="OnCancelClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>